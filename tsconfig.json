{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "allowJs": false,
    "outDir": "dist",
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "",
    "paths": {
      "package.json": ["package.json"],
    }
  },
}
